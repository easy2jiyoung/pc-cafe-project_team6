<div id="commonHeader">
  <h1>PCoding Cafe</h1>
  <div id="twobutton">
    <div class="btn-mypage">
      <button
        type="button"
        class="btn btn-light"
        onclick="location.href='/updateMyInfo'"
      >
        마이페이지
      </button>
    </div>
    <div class="btn-logout">
      <button type="button" class="btn btn-danger" onclick="logOut()">
        로그아웃
      </button>
    </div>
  </div>
</div>

<style>
  #commonHeader {
    background-color: #2c394b;
    width: 100%;
    height: 100px;
    display: grid;
    grid-template-columns: 1fr 4fr 1fr;
  }

  h1 {
    padding: 30px 0px 0px 50px;
    width: 400px;
  }

  #twobutton {
    width: 300px;
    float: right;
    padding: 30px 40px 0px 50px;
    display: flex;
    justify-content: space-between;
    margin-left: 100%;
  }
</style>

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.4/socket.io.js"
  integrity="sha512-YeeA/Qxn5hYdkukScTCNNOhTrv1C2RubAGButJ1rmgQwZf/HdRaCGl+JAVkqsqaNRaYNHdheiuKKuPf9mDcqKg=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
></script>
<script>
  const socket = io.connect("/");
  const userRole = "<%= user.role %>";
  socket.emit("newRoom", userRole);

  function logOut() {
    $.ajax({
      type: "GET",
      url: "/api/users/logout",
      success: function (response) {
        sessionStorage.clear();
        window.location.href = "/";
      },
      error: function (response) {
        alert(response.responseJSON.message);
      },
    });
  }
</script>
