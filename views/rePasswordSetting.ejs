        <link href="./css/signup.css" rel="stylesheet" />
        <link href="./css/index.css" rel="stylesheet" />
        <!-- jquery -->
        <script src="http://code.jquery.com/jquery-3.5.1.min.js"></script>
        <!-- <script src="js/updateMyInfo.js"></script> -->
        <style>
            input {
                color: orange;
            }

            .update {
                text-align: center;
            }

            .updateButton {
                width: 100%;
                cursor: pointer;
            }

            button {
                cursor: pointer;
                height: 30px;
                margin: 10px 0px 10px 0px;
            }

            #userInfo p {
                font-size: 15px;
            }
        </style>
        <script src="js/updateMyInfo.js"></script>
